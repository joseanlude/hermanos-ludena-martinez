        height: 42px;
        padding: 0 14px;
        border-radius: 14px 14px 0 0;
        border: 0;
        cursor: pointer;
        color: rgba(255,255,255,0.86);
        background: rgba(255,255,255,0.05);
        outline: 1px solid rgba(255,255,255,0.10);
        transition: background 160ms ease, outline-color 160ms ease, transform 160ms ease;
      }

      .tab:hover{
        transform: translateY(-1px);
        background: rgba(255,255,255,0.07);
        outline-color: rgba(255,255,255,0.16);
      }

      .tab.is-active,
      .tab[aria-selected="true"]{
        background: rgba(255,255,255,0.10);
        outline-color: rgba(255,255,255,0.18);
      }

      .tabpanels{
        border-radius: 0 var(--radius) var(--radius) var(--radius);
        background: rgba(255,255,255,0.04);
        outline: 1px solid rgba(255,255,255,0.10);
        padding: 18px;
      }

      .tabpanel{ display: none; }
      .tabpanel.is-active{ display: block; }

      .bullets{
        margin: 0;
        padding-left: 18px;
        color: rgba(255,255,255,0.78);
      }
      .bullets li{ margin: 8px 0; }

      /* Agrupaciones */
      .ag-grid{
        margin-top: 18px;
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap: 18px;
        align-items: stretch;
      }

      .ag-card{
        border-radius: var(--radius);
        background: rgba(255,255,255,0.04);
        outline: 1px solid rgba(255,255,255,0.10);
        overflow: hidden;
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        min-height: 100%;
      }

      .ag-head{ padding: 14px 14px 10px; }
      .ag-title{
        margin: 0;
        font-size: 14px;
        letter-spacing: 0.02em;
        color: rgba(255,255,255,0.90);
        line-height: 1.35;
      }

      .ag-image{
        background: #111;
        outline: 1px solid rgba(255,255,255,0.08);
      }
      .ag-image img{
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
        aspect-ratio: 4 / 3;
      }

      .ag-body{
        padding: 12px 14px;
        color: rgba(255,255,255,0.68);
        line-height: 1.7;
        font-size: 13px;
      }

      .ag-body p{ margin: 0; }

      .ag-foot{
        padding: 12px 14px 14px;
        border-top: 1px solid rgba(255,255,255,0.08);
      }

      .ag-price{
        margin: 0;
        text-align: center;
        font-size: 14px;
        letter-spacing: 0.02em;
        color: rgba(255,255,255,0.88);
      }

      .ag-other{
        margin-top: 16px;
        border-radius: var(--radius);
        background: rgba(255,255,255,0.04);
        outline: 1px solid rgba(255,255,255,0.10);
        padding: 16px 18px;
      }

      .ag-other-title{
        margin: 0 0 8px;
        font-size: 16px;
        letter-spacing: 0.02em;
      }

      .ag-other-text{
        margin: 0;
        color: rgba(255,255,255,0.68);
        line-height: 1.75;
      }

      .fineprint{
        margin: 12px 0 0;
        color: rgba(255,255,255,0.56);
        font-size: 12px;
        line-height: 1.55;
      }

      /* Nuestro equipo principal */
      .equipo{
        padding-top: 34px;
        padding-bottom: 34px;
      }

      .team-list{
        margin: 10px 0 0;
        padding-left: 18px;
        color: rgba(255,255,255,0.74);
        line-height: 1.8;
      }

      .team-role{
        color: rgba(255,255,255,0.62);
      }

      .team-link{
        text-decoration: underline;
        text-underline-offset: 4px;
      }

      /* Contáctanos */
      .lead{
        margin: 0 0 18px;
        color: rgba(255,255,255,0.68);
        line-height: 1.75;
        max-width: 80ch;
      }

      .inline-link{
        text-decoration: underline;
        text-underline-offset: 4px;
      }

      .contact-actions{
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin: 10px 0 0;
      }

      .btn{
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 42px;
        padding: 0 16px;
        border-radius: 999px;
        background: rgba(255,255,255,0.08);
        outline: 1px solid rgba(255,255,255,0.10);
        color: rgba(255,255,255,0.90);
        transition: transform 160ms ease, background 160ms ease, outline-color 160ms ease;
        border: 0;
        cursor: pointer;
      }

      .btn:hover{
        transform: translateY(-1px);
        background: rgba(255,255,255,0.12);
        outline-color: rgba(255,255,255,0.18);
      }

      .btn-ghost{ background: rgba(255,255,255,0.05); }

      /* Footer */
      .footer{
        padding: 30px 0 44px;
        color: rgba(255,255,255,0.58);
      }

      .footer-wrap{
        border-top: 1px solid rgba(255,255,255,0.08);
        padding-top: 16px;
      }

      /* Responsive */
      @media (max-width: 1100px){
        .ag-grid{ grid-template-columns: 1fr 1fr; }
      }

      @media (max-width: 980px){
        .intro{ grid-template-columns: 1fr; }
        .intro-media img{ aspect-ratio: 16 / 9; }

        .gallery-stack{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
      }

      @media (max-width: 640px){
        .gallery-stack{ grid-template-columns: 1fr; }
      }

      @media (max-width: 520px){
        :root{
          --sidebarW: 92px;
          --iconBox: 54px;
          --iconSize: 28px;
        }
        .wrap{ width: min(1120px, calc(100% - 34px)); }
        .wrap-wide{ width: min(1320px, calc(100% - 34px)); }
        .ag-grid{ grid-template-columns: 1fr; }
      }
    </style>
