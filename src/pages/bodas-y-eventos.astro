    <script>
      // Galería “Ver más”
      (() => {
        const root = document.querySelector("[data-gallery]");
        const btn = document.querySelector("[data-gallery-toggle]");
        if (!root || !btn) return;

        const collapsedCount = Number(root.getAttribute("data-collapsed-count") || "6");

        const apply = (expanded) => {
          const items = root.querySelectorAll("[data-gitem]");
          items.forEach((el, i) => {
            const hide = !expanded && i >= collapsedCount;
            el.toggleAttribute("hidden", hide);
          });

          btn.setAttribute("aria-expanded", expanded ? "true" : "false");
          btn.textContent = expanded ? "Ver menos" : "Ver más";
        };

        apply(false);

        btn.addEventListener("click", () => {
          const expanded = btn.getAttribute("aria-expanded") === "true";
          apply(!expanded);
        });
      })();

      // Tabs repertorio
      (() => {
        const tabs = document.querySelector("[data-tabs]");
        if (!tabs) return;

        const buttons = Array.from(tabs.querySelectorAll("[role='tab']"));
        const panels = Array.from(tabs.querySelectorAll("[role='tabpanel']"));

        const setActive = (key) => {
          buttons.forEach((b) => {
            const is = b.getAttribute("data-tab") === key;
            b.setAttribute("aria-selected", is ? "true" : "false");
            b.classList.toggle("is-active", is);
          });

          panels.forEach((p) => {
            const is = p.getAttribute("data-panel") === key;
            p.classList.toggle("is-active", is);
            p.toggleAttribute("hidden", !is);
          });
        };

        const firstKey = buttons[0]?.getAttribute("data-tab");
        if (firstKey) setActive(firstKey);

        buttons.forEach((b) => {
          b.addEventListener("click", () => setActive(b.getAttribute("data-tab")));
        });
      })();
    </script>

